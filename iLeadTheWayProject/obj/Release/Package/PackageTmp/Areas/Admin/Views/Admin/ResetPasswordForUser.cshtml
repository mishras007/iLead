@{
    //ViewBag.Title = "ResetPasswordForUser";
    Layout = "~/Areas/Admin/Views/Shared/_Admin.cshtml";
}

<div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default">
        <div class="panel-heading">
            <strong class="text-center">Reset Your Password</strong>
        </div>
        @using (Html.BeginForm("ResetPasswordForUser", "Admin", null, FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="panel-body form-horizontal ">
                <div class="form-group">
                    <div id="Error"></div>
                    <label class="col-sm-4 control-label">Email Id</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="EmailId" name="EmailId" placeholder="Email Id" required="" value="@Session["UserEmailId"]" type="email">
                        <span id="divEmail"></span><b>OR</b>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label">User Name</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="UserName" name="UserName" value="@Session["UserName"]" placeholder="User Name" required="" type="text">
                        <span id="divStatus"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div id="Error"></div>
                    <label class="col-sm-4 control-label">New Password</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="testPassword" name="testPassword" placeholder="Password" required="" type="password">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label">Re-Enter Password</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="Password" name="password" placeholder="Re Enter Password" required="" type="password">
                        <span id='message'></span>
                    </div>
                </div>
                <div class="form-group last">
                    <div class="col-sm-offset-4 col-sm-8">
                        <input type="submit" id="btnSubmit" name="btnSubmit" value="Submit" class="btn btn-success btn-lg" />
                        &nbsp; &nbsp;&nbsp;
                        @Html.ActionLink("Back To List", "Index", "Admin", null, null)
                    </div>
                </div>
            </div>
        }
    </div>
</div>
