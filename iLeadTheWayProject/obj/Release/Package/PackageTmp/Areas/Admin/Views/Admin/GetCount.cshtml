
@{
    Layout = null;
     @model EntityProject.PledgesTaken
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>GetCount</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/js/bootstrap.min.js"></script>
</head>
    <body>
        <div class="container">


            <div class="col-md-6 col-md-offset-3">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <strong class="">Edit Counter</strong>
                    </div>
                    @using (Html.BeginForm("GetCount", "Admin", null, FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        if (ViewBag.ErrorMessage != null)
                        {
                            @ViewBag.ErrorMessage
                        }
                        @Html.HiddenFor(model => model.PledgesTakenId)
                        <div class="panel-body form-horizontal ">
                            <div class="form-group">
                                <div id="Error"></div>
                                <label class="col-sm-4 control-label">Total Count</label>
                                <div class="col-sm-8">
                                    <div class="editor-field">
                                        @Html.EditorFor(model => model.CountPledges)
                                        @Html.ValidationMessageFor(model => model.CountPledges)
                                    </div>
                                </div>
                            </div>

                            <div class="form-group last">
                                <div class="col-sm-offset-4 col-sm-8">
                                    <input type="submit" id="btnSubmit" name="btnSubmit" value="Submit" class="btn btn-success btn-lg" />

                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </body>
</html>
