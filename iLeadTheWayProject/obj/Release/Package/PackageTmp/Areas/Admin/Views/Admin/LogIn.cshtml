@{
    Layout = null;

    @model EntityProject.AdminDetail

}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Admin-Log In</title>
    <link href="~/Areas/Admin/assets/css/bootstrap.css" rel="stylesheet" />
    <script src="~/Areas/Admin/assets/js/bootstrap.min.js"></script>
    <script src="~/Areas/Admin/assets/css/bootstrap.js"></script>
    <link href="~/Areas/Admin/assets/css/Site.css" rel="stylesheet" />
    <script src="~/Areas/Admin/assets/css/bootstrap.js"></script>
    <link href="~/Areas/Admin/assets/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Areas/Admin/assets/js/jquery-1.10.2.js"></script>
    <script src="~/Areas/Admin/assets/js/jquery-1.8.2.min.js"></script>
    <script src="~/Areas/Admin/assets/js/jquery-1.10.2.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap-theme.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <style type="text/css">
        .bs-example {
            margin: 20px;
        }
    </style>
</head>
<body>
    <div>
        <br />
        <br />
        <br />
    </div>
    <div class="container">
        <div class="row" align="center">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        @if (ViewBag.SuccessMessage != null)
                        {
                            @ViewBag.SuccessMessage
                        }
                        <strong class="">Login Your Account</strong>
                    </div>
                    @using (Html.BeginForm("Login", "Admin", null, FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="panel-body form-horizontal">
                            <div class="form-group">
                                <div id="Error"></div>
                                <label class="col-sm-4 control-label">User Name</label>
                                <div class="col-sm-8">
                                    <input class="form-control" id="UserName" name="UserName" placeholder="User Name" required="" type="text">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-4 control-label">Password</label>
                                <div class="col-sm-8">
                                    <input class="form-control" id="Password" name="Password" placeholder="Password" required="" type="password">
                                </div>
                                <span id="error" style="color: red">
                                    @if (ViewBag.ErrorMessage != null)
                                    {
                                        @ViewBag.ErrorMessage
                                    }
                                </span>
                            </div>
                            <div class="form-group last">
                                <div class="col-sm-offset-2 col-sm-9">
                                    <input type="submit" id="btnLogin" name="btnLogin" value="Login" onclick="location.href = '@Url.Action("Login", "Admin")' " class="btn btn-success btn-sm" />
                                    &nbsp; &nbsp;&nbsp;
                                    @*@Html.ActionLink("New User Registration", "NewRegistration", "Admin", null, null)*@
                                </div>
                            </div>
                        </div>
                    }
                    <div class="panel-footer">
                        @*<a href="#modal-table" id="btnPopup" role="button" class="blue" data-toggle="modal">Forget Password</a>*@
                        <a href="#myModal" class="btn btn-sm btn-primary" data-toggle="modal">Forget Password</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
    @*Forget Password Form*@
    @using (Html.BeginForm("ForgetPass", "Admin", null, FormMethod.Post))
    {
        <div id="myModal" class="modal fade">
            <div class="modal-dialog" style="border-color:Black;border:2px">
                <div class="modal-content">
                    <div class="modal-header" style="background-color:gray">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title">Send Email For forgot Password</h4>
                    </div>
                    <div class="modal-body">
                        <div class="panel-body form-horizontal ">
                            <div class="form-group">
                                <div id="Error"></div>
                                <label class="col-sm-6 control-label">Enter Your Register Email Id</label>
                                <div class="col-sm-6">
                                    <input class="form-control" id="EmailId" name="EmailId" placeholder="Email Id" required="" type="email">
                                    <span id="divEmail"></span>
                                </div>
                            </div>
                            <span id="error12" style="color: red">
                                @if (ViewBag.EmailMessage != null)
                                {
                                    @ViewBag.EmailMessage
                                }
                            </span>
                        </div>
                    </div>
                    <div class="modal-footer" style="background-color:darkgray">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Send</button>
                    </div>
                </div>
            </div>
        </div>
    }
</body>
</html>
