@*@model List<EntityProject.BlogPost>;*@
@{
    //ViewBag.Title = "View Blog";
    Layout = "~/Areas/Admin/Views/Shared/_Admin.cshtml";
    var data = ViewData["Blog"];
}
@using EntityProject
<div class="col-lg-offset-9 col-md-3">
    <h4>  @Html.ActionLink("Create New FACTS", "CreateBlog", "Admin", null, null)</h4>
</div>
<div class="col-lg-12">
    @if (ViewBag.ErrorMessage != null)
    {
        @ViewBag.ErrorMessage
    }
    @if (ViewBag.SuccessMessage != null)
    {
        @ViewBag.SuccessMessage
    }
</div>
<div class="col-lg-12 ">
    <br />
    <table id="BlogPost" class="table table-hover table-striped table-bordered table-responsive">
        <thead>
            <tr>
                <th>I No</th>
                <th>Posted On</th>
                <th>image</th>
                <th>Contant</th>
                <th><i class="fa fa-desktop fa-fw"></i></th>
                @*<th><i class="fa fa-edit fa-fw"></i></th>
                <th><i class="fa fa-trash-o fa-fw"></i></th>*@
                <th><input type="checkbox" id="CheckBlog" name="CheckBlog" />  <label id="lblCheckBlog">Check All</label> </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in (List<BlogPost>)data)
            {
                <tr>
                    <td>
                        @item.BlogPostId
                    </td>

                    <td>
                        @item.PostedOn
                    </td>
                    <td>
                        @item.ImageUrl
                    </td>
                    <td>
                        @Html.Raw(item.Content)
                    </td>
                    <td>@Html.ActionLink("Detail", "DetailBlog", new { id = item.BlogPostId }, new { id = "lnkDetail" }) </td>
                    @*<td>@Html.ActionLink("Edit", "UpdateBlog", new { id = item.BlogPostId }, new { id = "lnkEdit" }) </td>
                    <td>@Html.ActionLink("Delete", "DeleteBlog", new { id = item.BlogPostId }, new { onclick = "return confirm('Are you sure you wish to delete this Record?');" })</td>*@
                    <td>
                        <input type="checkbox" id="CheckBlog" class="CheckBlogtbl" name="CheckBlogtbl" checked="@item.IsSelected" value="@item.BlogPostId" />
                        @*@Html.CheckBox(item.IsSelected, new { @class = "CheckBlogtbl", @Value = item.BlogPostId, @Name = "CheckBlogtbl" })*@
                    </td>
                </tr>
            }

        </tbody>

    </table>
</div>
<div class="col-lg-12">
    <input type="submit" id="btnUpdateBlog" class="btn btn-info btn-lg" value="Update" />
</div>
