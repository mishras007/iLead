@{
    //ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Admin.cshtml";
    @model List<EntityProject.AdminDetail>
}

<div class="row">
    <!--quick info section -->
    <div class="col-lg-3">
        <div class="alert alert-danger text-center">
            <i class="fa fa-users fa-3x"></i>&nbsp;&nbsp;&nbsp;<b>@ViewBag.UserCount</b>&nbsp;&nbsp; Admin
        </div>
    </div>
    <div class="col-lg-3">
        <div class="alert alert-success text-center">
            <i class="fa  fa-twitter fa-3x"></i>&nbsp;<b>@ViewBag.TwitterCount</b>&nbsp;Total Hashtag Tweets@*&nbsp;&nbsp;<b> @ViewBag.activeTwittesCount</b>&nbsp;Active Tweets*@
        </div>
    </div>
    <div class="col-lg-3">
        <div class="alert alert-info text-center">
            <i class="fa fa-youtube fa-3x"></i>&nbsp;<b>@ViewBag.YouTubeCount</b>&nbsp;Total Video@*&nbsp;&nbsp;<b>@ViewBag.activeVideoCount</b>&nbsp;Total Dispaly Video*@
        </div>
    </div>
    <div class="col-lg-3">
        <div class="alert alert-warning text-center">
            <i class="fa  fa-edit fa-3x"></i>&nbsp;&nbsp;&nbsp;<b>10</b>&nbsp;&nbsp;Total FATCS
        </div>
    </div>
    <!--end quick info section -->
</div>
<br />
<div class="col-lg-12">
    @if (ViewBag.ErrorMessage != null)
    {
        @ViewBag.ErrorMessage
    }
    @if (ViewBag.SuccessMessage != null)
    {
        @ViewBag.SuccessMessage
    }
</div>
<div class="col-lg-offset-10 col-lg-2">
    <a href="@Url.Action("ResetPasswordForUser", "Admin" )"><i class="fa fa-gear fa-fw"></i>Change Password</a>
</div>
<div class="col-lg-12 ">
    <br />
    <table id="example" class="table table-hover table-striped table-bordered table-responsive">
        <thead>
            <tr>
                <th>R No</th>
                <th>User Name</th>
                <th>Name</th>
                <th>Mobile No</th>
                <th>Email Id</th>
                <th><i class="fa fa-desktop fa-fw"></i></th>
                @*<th><i class="fa fa-edit fa-fw"></i></th>
                <th><i class="fa fa-trash-o fa-fw"></i></th>*@
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.AdminDetailId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MobileNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmailId)
                    </td>
                    <td>@Html.ActionLink("View Details", "Viewuser", new { id = item.AdminDetailId }, new { id = "lnkDetail" })</td>
                    @*<td>@Html.ActionLink("Edit", "EditUser", new { id = item.AdminDetailId }, new { id = "lnkEdit" }) </td>
                    <td>@Html.ActionLink("Delete", "DeleteUser", new { id = item.AdminDetailId }, new { onclick = "return confirm('Are you sure you wish to delete this Record?');" })</td>*@
                </tr>
            }
        </tbody>
    </table>
</div>

