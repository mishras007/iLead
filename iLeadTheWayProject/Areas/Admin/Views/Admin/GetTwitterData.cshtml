@using EntityProject
@{
    //ViewBag.Title = "GetTwitterData";
    Layout = "~/Areas/Admin/Views/Shared/_Admin.cshtml";
    var data = ViewData["Pending"];
}


<div class="col-lg-offset-3 col-md-9">
    <h4>@Html.ActionLink("Pending Moderation", "GetTwitterData", "Admin", null, new { @class = "btn btn-success" })&nbsp;&nbsp;&nbsp;&nbsp;@Html.ActionLink("Approved Tweets", "ApprovalTwitter", "Admin", null, new { @class = "btn btn-primary" })&nbsp;&nbsp;&nbsp;&nbsp; @Html.ActionLink("Rejected Tweets", "UnApprovalTwitter", "Admin", null, new { @class = "btn btn-primary" })&nbsp;&nbsp;&nbsp;&nbsp; @Html.ActionLink("Fetch Tweets", "AddTwitterData", "Admin", null, new { @class = "btn btn-primary" })</h4>
</div>
<div class="col-md-12">
    <div class="col-lg-12">
        <h2>Twitter Data Checked Or Unchecked</h2>
    </div>
    <div class="col-lg-12">
        <table id="TwitterTable" class="table table-hover table-striped table-bordered table-responsive">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Profile Image</th>
                    <th>Screen Name</th>
                    <th>User Name</th>
                    <th>Text</th>
                    <th>Date & Time</th>
                    <th>Status</th>
                    @*<th>Action</th>*@
                    <th><input type="checkbox" id="chckTwitter" name="chckTwitter" />  <label id="lbltext12">Check All</label> </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in (List<TwitterData>)data)
                {
                    <tr>
                        <td>
                            @item.TwitterDataId
                        </td>
                        <td>
                            <img src="@item.ProfileImageUrl" style="height:50px;width:50px; " class="img-circle" />
                        </td>
                        <td>
                            @item.ScreenName
                        </td>
                        <td>
                            @item.UserName
                        </td>
                        <td>
                            @item.Text
                        </td>
                        <td>
                            @item.TimeStam
                        </td>
                        <td>
                            @item.IsValid
                        </td>
                        <td>
                            <input type="checkbox" class="chcktblTwitter" name="chcktblTwitter" value="@item.TwitterDataId" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-lg-6">
        <input type="submit" id="btnApprove" class="btn btn-primary " value="Approve" />
    </div>
    <div class="col-lg-6">
        <input type="submit" id="btnReject" class="btn btn-danger " value="Reject" />
    </div>
</div>

